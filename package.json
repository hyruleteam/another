{
  "private": true,
  "author": {
    "name": "wenyu",
    "email": "wangwenyu9394@gmail.com"
  },
  "scripts": {
    "start": "electron app/dist/main",
    "postinstall": "cd app && tnpm i && cd .. && npm run rebuild",
    "dev:renderer": "cross-env ESLINT=none roadhog dev",
    "dev:main": "webpack -w --config ./webpack.config.main.babel.js --mode development",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "clean": "chmod u+x dist && rm -rf node_modules app/node_modules dist app/dist",
    "build": "cross-env ESLINT=none roadhog build && webpack --config ./webpack.config.main.babel.js --mode production",
    "lint": "eslint --ext .js src test webpack.config.babel.js",
    "test": "mocha test/**/*-test.js --require babel-register --require ./test/setup --no-timeouts",
    "rebuild": "electron-rebuild -f -w ./app",
    "pack": "npm run build && npm run rebuild && electron-builder",
    "pack:dir": "npm run build && npm run rebuild && electron-builder --dir",
    "pack:justBuild": "electron-builder --dir",
    "precommit": "npm run lint"
  },
  "build": {
    "appId": "com.sorrycc.dva-boilerplate",
    "directories": {
      "app": "app"
    },
    "files": [
      "**/*",
      "dist/*",
      "dist/**/*"
    ],
    "asar": false
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.36",
    "@babel/preset-env": "^7.0.0-beta.36",
    "@babel/preset-react": "^7.0.0-beta.36",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-dva-hmr": "^0.4.1",
    "concurrently": "^3.1.0",
    "devtron": "^1.4.0",
    "dva": "^2.2.3",
    "cross-env": "^5.1.4",
    "cross-port-killer": "^1.0.1",
    "electron": "^1.8.6",
    "electron-builder": "^20.11.1",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.3",
    "electron-rebuild": "^1.7.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-unicorn": "^4.0.3",
    "husky": "^0.14.3",
    "mocha": "^3.2.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "redbox-react": "^1.6.0",
    "roadhog": "^2.3.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2"
  },
  "license": "MIT",
  "dependencies": {
    "antd": "^3.5.0",
    "less": "2.7.2",
    "babel-plugin-import": "^1.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0"
  }
}
